{
  "manifest_version": 3,
  "name": "Edge Increase Font",
  "version": "1.0.0",
  "description": "A browser extension that increases the font size of text on a page",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Edge Increase Font"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}